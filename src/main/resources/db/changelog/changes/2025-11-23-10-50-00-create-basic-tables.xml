<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-country-table" author="Kasym">
        <createTable tableName="countries">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"  />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true" />
            </column>

            <column name="code" type="varchar(255)">
                <constraints unique="true"  nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-item-table" author="Kasym">
        <createTable tableName="items">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"  />
            </column>
            
            <column name="name" type="varchar(255)">
                <constraints unique="true" nullable="false" />
            </column>
            
            <column name="price" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="quantity" type="int">
                <constraints nullable="false" />
            </column>
            
            <column name="manufactor_id" type="bigint">
                <constraints nullable="false" />
            </column>


        </createTable>
    </changeSet>
    
    
    <changeSet id="add-items-table-foreign-key-country-id" author="Kasym">
        <addForeignKeyConstraint baseTableName="items" baseColumnNames="manufactor_id"
                                 constraintName="fk_item_id" referencedTableName="countries"
                                 referencedColumnNames="id"
                                 onDelete="RESTRICT"
                                 onUpdate="CASCADE"
                                 validate="true"/>

    </changeSet>
</databaseChangeLog>